<div>
  <% if @product.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
</div>


<section>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="product_single">
        <h1>Edit product:</h1>
          <%= form_tag "/index/#{@link.id}", method: :patch do %>
            <div class="form-group">
              <%= label_tag :slug %>
              <%= text_field_tag :slug, @link.slug, class: "form-control"  %>
            </div>
            <div class="form-group">
              <%= label_tag :user_id  %>
              <%= hidden_field_tag :user_id, @link.user_id, class: "form-control"  %>
            </div>
            <div class="form-group">
              <%= label_tag :target_url  %>
              <%= text_field_tag :target_url, @link.target_url, class: "form-control"  %>
            </div>
            <%= submit_tag "Update link", class: "btn btn-default" %>
          <% end %>
      </div>
    </div>
  </div>
</section>

